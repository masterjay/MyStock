    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // ============================================
        // ÊéíÂ∫èÂäüËÉΩ
        // ============================================
        let originalStockData = [];
        let currentSortField = null;
        let currentSortOrder = null;

        function initSorting() {
            const headers = document.querySelectorAll('.turnover-table th.sortable');
            headers.forEach(th => {
                th.addEventListener('click', () => handleSort(th.dataset.field));
            });
            
            const clearBtn = document.getElementById('sortClearBtn');
            if (clearBtn) {
                clearBtn.addEventListener('click', clearSort);
            }
        }

        function handleSort(field) {
            if (currentSortField !== field) {
                currentSortField = field;
                currentSortOrder = 'asc';
            } else if (currentSortOrder === 'asc') {
                currentSortOrder = 'desc';
            } else if (currentSortOrder === 'desc') {
                currentSortField = null;
                currentSortOrder = null;
            }
            
            updateSortUI();
            renderStockTable();
        }

        function clearSort() {
            currentSortField = null;
            currentSortOrder = null;
            updateSortUI();
            renderStockTable();
        }

        function updateSortUI() {
            const statusBar = document.getElementById('sortStatusBar');
            const fieldName = document.getElementById('sortFieldName');
            const arrow = document.getElementById('sortArrow');
            
            document.querySelectorAll('.turnover-table th.sortable').forEach(th => {
                th.classList.remove('sort-asc', 'sort-desc');
            });
            
            if (currentSortField && currentSortOrder) {
                statusBar.style.display = 'flex';
                
                const fieldNames = {
                    'close_price': 'ËÇ°ÂÉπ',
                    'change_pct': 'Êº≤Ë∑å',
                    'turnover_rate': 'Âë®ËΩâÁéá',
                    'surge_ratio': 'ÁàÜÈáè'
                };
                fieldName.textContent = fieldNames[currentSortField] || currentSortField;
                arrow.textContent = currentSortOrder === 'asc' ? '‚ñ≤' : '‚ñº';
                
                const activeHeader = document.querySelector(`th[data-field="${currentSortField}"]`);
                if (activeHeader) {
                    activeHeader.classList.add(currentSortOrder === 'asc' ? 'sort-asc' : 'sort-desc');
                }
            } else {
                statusBar.style.display = 'none';
            }
        }

        function getSortedStocks() {
            if (!currentSortField || !currentSortOrder) {
                return [...originalStockData];
            }
            
            return [...originalStockData].sort((a, b) => {
                let valA = a[currentSortField];
                let valB = b[currentSortField];
                
                if (valA == null) valA = -Infinity;
                if (valB == null) valB = -Infinity;
                
                const result = valA - valB;
                return currentSortOrder === 'asc' ? result : -result;
            });
        }

        function renderStockTable() {
            const tbody = document.getElementById('turnover-tbody');
            const stocks = getSortedStocks();
            
            if (stocks.length === 0) {
                tbody.innerHTML = '<tr><td colspan="8" class="empty-state">Êö´ÁÑ°Ë≥áÊñô</td></tr>';
                return;
            }
            
            tbody.innerHTML = '';
            
            stocks.forEach((stock, idx) => {
                const tr = document.createElement('tr');
                
                let rateClass = 'rate-normal';
                if (stock.turnover_rate >= 15) rateClass = 'rate-danger';
                else if (stock.turnover_rate >= 10) rateClass = 'rate-warning';
                
                let surgeText = '-';
                let surgeClass = '';
                if (stock.surge_ratio) {
                    surgeText = stock.surge_ratio.toFixed(1) + 'x';
                    if (stock.surge_ratio >= 3) surgeClass = 'surge-high';
                }
                
                let tagsHtml = '';
                if (stock.tags && stock.tags.length > 0) {
                    stock.tags.forEach(tag => {
                        if (tag === 'È´òÂë®ËΩâ') tagsHtml += '<span class="tag tag-overheat">È´òÂë®ËΩâ</span>';
                        else if (tag === 'ÁàÜÈáè') tagsHtml += '<span class="tag tag-surge">ÁàÜÈáè</span>';
                    });
                } else if (stock.turnover_rate >= 5) {
                    tagsHtml = '<span class="tag tag-active">Ê¥ªË∫ç</span>';
                }
                
                tr.innerHTML = `
                    <td>${idx + 1}</td>
                    <td><span class="stock-code">${stock.code}</span><span class="stock-name">${stock.name}</span></td>
                    <td class="stock-price">${stock.close_price ? stock.close_price.toFixed(2) : "-"}</td>
                    <td class="stock-change ${stock.change_pct >= 0 ? "change-up" : "change-down"}">${stock.change_pct != null && stock.change_pct !== undefined ? (stock.change_pct >= 0 ? "+" : "") + stock.change_pct.toFixed(2) + "%" : "-"}</td>
                    <td>${stock.industry || '-'}</td>
                    <td class="${rateClass}">${stock.turnover_rate.toFixed(2)}%</td>
                    <td class="${surgeClass}">${surgeText}</td>
                    <td>${tagsHtml}</td>
                `;
                tbody.appendChild(tr);
            });
        }

        // ============================================
        // ÂéüÊúâÂäüËÉΩ
        // ============================================
        function generateMockData() {
            const today = new Date();
            const marginHistory = [];
            const futuresHistory = [];
            const labels = [];

            for (let i = 29; i >= 0; i--) {
                const date = new Date(today);
                date.setDate(date.getDate() - i);
                const dateStr = `${date.getMonth() + 1}/${date.getDate()}`;
                labels.push(dateStr);

                marginHistory.push((Math.random() * 4 + 23).toFixed(1));
                futuresHistory.push((Math.random() * 0.3 + 0.95).toFixed(2));
            }

            return {
                labels,
                margin: {
                    ratio: marginHistory[marginHistory.length - 1],
                    balance: (Math.random() * 500 + 3500).toFixed(0),
                    history: marginHistory
                },
                futures: {
                    ratio: futuresHistory[futuresHistory.length - 1],
                    foreignNet: Math.floor(Math.random() * 30000 - 10000),
                    history: futuresHistory
                }
            };
        }

        function getMarginColor(ratio) {
            const r = parseFloat(ratio);
            if (r >= 28) return 'var(--accent-red)';
            if (r >= 25) return 'var(--accent-amber)';
            if (r >= 20) return 'var(--accent-green)';
            return 'var(--accent-cyan)';
        }

        function getRatioColor(ratio) {
            const r = parseFloat(ratio);
            if (r >= 1.2) return 'var(--accent-green)';
            if (r >= 0.8) return 'var(--accent-amber)';
            return 'var(--accent-red)';
        }

        function getMarginStatus(ratio) {
            const r = parseFloat(ratio);
            if (r >= 28) return '‚ö† È´òÊ∞¥‰Ωç';
            if (r >= 25) return 'üìä ÂÅèÈ´ò';
            if (r >= 20) return '‚úì Ê≠£Â∏∏';
            return 'üìâ ÂÅè‰Ωé';
        }

        function getSentiment(ratio) {
            const r = parseFloat(ratio);
            if (r >= 1.2) return 'üü¢ ÂÅèÂ§ö';
            if (r >= 0.8) return 'üü° Âπ≥Ë°°';
            return 'üî¥ ÂÅèÁ©∫';
        }

        async function loadTurnoverData() {
            try {
                const response = await fetch('./data/turnover_analysis.json?t=' + new Date().getTime());
                if (!response.ok) {
                    console.log('Âë®ËΩâÁéáÊï∏ÊìöÂ∞öÊú™ÁîüÊàê');
                    return null;
                }
                const data = await response.json();
                return data;
            } catch (error) {
                console.error('ËºâÂÖ•Âë®ËΩâÁéáÊï∏ÊìöÂ§±Êïó:', error);
                return null;
            }
        }

        function updateTurnoverMonitor(turnoverData) {
            if (!turnoverData || !turnoverData.all_stocks) {
                console.log('ÁÑ°Âë®ËΩâÁéáÊï∏Êìö');
                return;
            }

            originalStockData = turnoverData.all_stocks;
            
            const stats = turnoverData.statistics;

            document.getElementById('stat-extreme').textContent = stats.overheat || 0;
            document.getElementById('stat-severe').textContent = stats.surge || 0;
            document.getElementById('stat-warning').textContent = stats.both || 0;
            document.getElementById('stat-normal').textContent = stats.active || 0;

            renderStockTable();
            updateIndustryAnalysis(turnoverData.industry_stats);
            initSorting();
        }

        function updateIndustryAnalysis(industryStats) {
            const tbody = document.getElementById('industry-tbody');
            
            if (!industryStats || industryStats.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" class="empty-state">Êö´ÁÑ°Ë≥áÊñô</td></tr>';
                return;
            }

            tbody.innerHTML = '';
            
            industryStats.forEach((stat, index) => {
                const tr = document.createElement('tr');
                
                const overheatClass = stat.overheat > 0 ? 'has-overheat' : '';
                const avgClass = stat.avg_rate >= 15 ? 'rate-danger' : stat.avg_rate >= 10 ? 'rate-warning' : '';
                
                tr.innerHTML = `
                    <td>${index + 1}</td>
                    <td class="industry-name">${stat.industry}</td>
                    <td class="industry-count">${stat.count}Ê™î</td>
                    <td class="${overheatClass}">${stat.overheat || 0}Ê™î</td>
                    <td class="${avgClass}">${stat.avg_rate || 0}%</td>
                `;
                tbody.appendChild(tr);
            });
        }

        function initCharts(historyData) {
            if (!historyData || !historyData.margin || !historyData.futures) {
                console.warn('No history data for charts');
                return;
            }
            
            const marginLabels = historyData.margin.map(d => {
                const str = d.date;
                return str.slice(4,6) + '/' + str.slice(6,8);
            }).reverse();
            const marginValues = historyData.margin.map(d => d.ratio).reverse();
            
            const futuresLabels = historyData.futures.map(d => {
                const str = d.date;
                return str.slice(4,6) + '/' + str.slice(6,8);
            }).reverse();
            const futuresValues = historyData.futures.map(d => d.ratio).reverse();
            
            const chartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    x: {
                        grid: { color: 'rgba(45, 55, 72, 0.3)' },
                        ticks: { color: '#7d8ba7', font: { size: 10 } }
                    },
                    y: {
                        grid: { color: 'rgba(45, 55, 72, 0.3)' },
                        ticks: { color: '#7d8ba7', font: { size: 10 } }
                    }
                }
            };

            new Chart(document.getElementById('marginChart'), {
                type: 'line',
                data: {
                    labels: marginLabels,
                    datasets: [{
                        data: marginValues,
                        borderColor: '#00ff88',
                        backgroundColor: 'rgba(0, 255, 136, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    ...chartOptions,
                    scales: {
                        ...chartOptions.scales,
                        y: { 
                            ...chartOptions.scales.y,
                            beginAtZero: false
                        }
                    }
                }
            });

            new Chart(document.getElementById('futuresChart'), {
                type: 'line',
                data: {
                    labels: futuresLabels,
                    datasets: [{
                        data: futuresValues,
                        borderColor: '#00d9ff',
                        backgroundColor: 'rgba(0, 217, 255, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    ...chartOptions,
                    scales: {
                        ...chartOptions.scales,
                        y: { ...chartOptions.scales.y, beginAtZero: false }
                    }
                }
            });
        }

        function updateUI(data) {
            const dataIndicator = document.getElementById('dataIndicator');
            const dataSourceText = document.getElementById('dataSourceText');
            const mockWarning = document.getElementById('mockDataWarning');
            
            if (data.isRealData) {
                dataIndicator.className = 'data-indicator real';
                dataSourceText.textContent = 'REAL DATA';
                dataSourceText.style.color = 'var(--accent-green)';
                mockWarning.style.display = 'none';
            } else {
                dataIndicator.className = 'data-indicator mock';
                dataSourceText.textContent = 'MOCK DATA';
                dataSourceText.style.color = 'var(--accent-amber)';
                mockWarning.style.display = 'block';
            }
            
            document.getElementById('marginRatio').textContent = data.margin.ratio;
            document.getElementById('marginRatio').style.color = getMarginColor(data.margin.ratio);
            document.getElementById('marginBalance').textContent = parseInt(data.margin.balance).toLocaleString() + 'ÂÑÑ';
            document.getElementById('marginStatus').textContent = getMarginStatus(data.margin.ratio);
            document.getElementById('marginStatus').style.color = getMarginColor(data.margin.ratio);
            
            if (data.margin.date) {
                const marginDate = data.margin.date;
                const formatted = marginDate.substring(0,4) + '/' + marginDate.substring(4,6) + '/' + marginDate.substring(6,8);
                document.getElementById('marginDate').textContent = formatted;
            }

            document.getElementById('futuresRatio').textContent = data.futures.ratio;
            
            if (data.futures.date) {
                const futuresDate = data.futures.date;
                const formatted = futuresDate.substring(0,4) + '/' + futuresDate.substring(4,6) + '/' + futuresDate.substring(6,8);
                document.getElementById('futuresDate').textContent = formatted;
            }
            document.getElementById('futuresRatio').style.color = getRatioColor(data.futures.ratio);
            const netSign = data.futures.foreign_net >= 0 ? '+' : '';
            document.getElementById('foreignNet').textContent = netSign + data.futures.foreign_net.toLocaleString() + 'Âè£';
            document.getElementById('foreignNet').style.color = data.futures.foreign_net >= 0 ? 'var(--accent-red)' : 'var(--accent-green)';
            document.getElementById('sentiment').textContent = getSentiment(data.futures.ratio);
            document.getElementById('sentiment').style.color = getRatioColor(data.futures.ratio);

            document.getElementById('lastUpdate').textContent = new Date().toLocaleTimeString('zh-TW');
        }

        async function loadCommodityData(commodity) {
            try {
                const response = await fetch(`./data/${commodity}_futures.json?t=` + new Date().getTime());
                if (!response.ok) {
                    console.log(`${commodity} Êï∏ÊìöÂ∞öÊú™ÁîüÊàê`);
                    return null;
                }
                const data = await response.json();
                return data;
            } catch (error) {
                console.error(`ËºâÂÖ• ${commodity} Â§±Êïó:`, error);
                return null;
            }
        }

        function updateCommodityDisplay(commodity, data, color, decimals = 2) {
            if (!data || !data.history || data.history.length === 0) {
                console.log(`ÁÑ° ${commodity} Êï∏Êìö`);
                return;
            }

            const history = data.history;
            const currentPrice = data.current_price;
            const previousClose = history[history.length - 2]?.close || history[history.length - 1]?.close;
            const change = currentPrice - previousClose;
            const changePercent = (change / previousClose) * 100;

            document.getElementById(`${commodity}-price`).textContent = `$${currentPrice.toFixed(decimals)}`;

            const changeElem = document.getElementById(`${commodity}-change`);
            const changeText = `${change >= 0 ? '+' : ''}${change.toFixed(decimals)} (${changePercent >= 0 ? '+' : ''}${changePercent.toFixed(2)}%)`;
            changeElem.textContent = changeText;
            changeElem.className = change >= 0 ? 'commodity-change positive' : 'commodity-change negative';

            drawCommodityChart(`${commodity}Chart`, history, color, data.name, decimals);
        }

        function drawCommodityChart(chartId, history, color, name, decimals = 2) {
            const ctx = document.getElementById(chartId).getContext('2d');

            const labels = history.map(d => {
                const date = new Date(d.date);
                return `${date.getMonth() + 1}/${date.getDate()}`;
            });
            const prices = history.map(d => d.close);

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: name,
                        data: prices,
                        borderColor: color,
                        backgroundColor: color + '20',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.3,
                        pointRadius: 0,
                        pointHoverRadius: 4,
                        pointHoverBackgroundColor: color
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            backgroundColor: 'rgba(0,0,0,0.8)',
                            titleColor: '#fff',
                            bodyColor: '#fff',
                            borderColor: color,
                            borderWidth: 1,
                            callbacks: {
                                label: function(context) {
                                    return `ÂÉπÊ†º: $${context.parsed.y.toFixed(decimals)}`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            grid: { color: 'rgba(255,255,255,0.1)', drawBorder: false },
                            ticks: { color: 'rgba(255,255,255,0.5)', maxTicksLimit: 8, font: { size: 10 } }
                        },
                        y: {
                            grid: { color: 'rgba(255,255,255,0.1)', drawBorder: false },
                            ticks: {
                                color: 'rgba(255,255,255,0.5)',
                                font: { size: 10 },
                                callback: function(value) {
                                    return '$' + value.toFixed(decimals);
                                }
                            }
                        }
                    },
                    interaction: { mode: 'nearest', axis: 'x', intersect: false }
                }
            });
        }

        async function loadAllCommodities() {
            const copperData = await loadCommodityData('copper');
            const goldData = await loadCommodityData('gold');
            const oilData = await loadCommodityData('oil');
            const steelData = await loadCommodityData('steel');

            if (copperData) updateCommodityDisplay('copper', copperData, '#ff9f43', 3);
            if (goldData) updateCommodityDisplay('gold', goldData, '#ffd700', 2);
            if (oilData) updateCommodityDisplay('oil', oilData, '#95a5a6', 2);
            if (steelData) updateCommodityDisplay('steel', steelData, '#7f8c8d', 2);
        }

        async function loadData() {
            let isRealData = false;
            let data = null;
            
            try {
                const response = await fetch('./data/market_data.json?t=' + new Date().getTime());
                if (response.ok) {
                    const jsonData = await response.json();
                    if (jsonData.latest) {
                        data = {
                            ...jsonData.latest,
                            latest: jsonData.latest,
                            history: jsonData.history,
                            sentiment: jsonData.sentiment,
                            updated_at: jsonData.updated_at
                        };
                    } else {
                        data = jsonData;
                    }
                    isRealData = true;
                    console.log('‚úì ËºâÂÖ•ÁúüÂØ¶Êï∏Êìö');
                }
            } catch (error) {
                console.log('‰ΩøÁî®Ê®°Êì¨Êï∏Êìö');
            }
            
            if (!isRealData) {
                data = generateMockData();
            }
            
            data.isRealData = isRealData;
            
            return data;
        }

        // ============================================
        // Êï£Êà∂ vs Ê≥ï‰∫∫
        // ============================================
        function updateRetailBattle(futuresData) {
            if (!futuresData) return;
            
            const retailLong = futuresData.retail_long || 0;
            const retailShort = futuresData.retail_short || 0;
            const retailNet = futuresData.retail_net || 0;
            const retailRatio = futuresData.retail_ratio || 0;
            
            updateBattleGauge('retail', retailRatio);
            
            const longEl = document.getElementById('retail-long');
            longEl.textContent = retailLong.toLocaleString() + 'Âè£';
            longEl.style.color = 'var(--accent-red)';
            
            const shortEl = document.getElementById('retail-short');
            shortEl.textContent = retailShort.toLocaleString() + 'Âè£';
            shortEl.style.color = 'var(--accent-green)';
            
            const retailNetSign = retailNet >= 0 ? '+' : '';
            const retailNetElement = document.getElementById('retail-net');
            retailNetElement.textContent = retailNetSign + retailNet.toLocaleString() + 'Âè£';
            retailNetElement.style.color = retailNet >= 0 ? 'var(--accent-red)' : 'var(--accent-green)';
            
            const interpretation = interpretRetailSentiment(retailRatio);
            document.getElementById('retail-sentiment').textContent = interpretation.sentiment;
            document.getElementById('retail-sentiment').style.color = interpretation.color;
            document.getElementById('retail-signal').textContent = interpretation.signal;
            document.getElementById('retail-signal').style.color = interpretation.color;
            document.getElementById('retail-advice').textContent = interpretation.advice;
            
            const foreignNet = futuresData.foreign_net || 0;
            
            document.getElementById('foreign-net').textContent = 
                (foreignNet >= 0 ? '+' : '') + foreignNet.toLocaleString() + 'Âè£';
            document.getElementById('foreign-net').style.color = 
                foreignNet >= 0 ? 'var(--accent-red)' : 'var(--accent-green)';
            
            const trustNet = futuresData.trust_net || 0;
            const dealerNet = futuresData.dealer_net || 0;
            
            document.getElementById('trust-net').textContent = 
                (trustNet >= 0 ? '+' : '') + trustNet.toLocaleString() + 'Âè£';
            document.getElementById('trust-net').style.color = 
                trustNet >= 0 ? 'var(--accent-red)' : 'var(--accent-green)';
            
            document.getElementById('dealer-net').textContent = 
                (dealerNet >= 0 ? '+' : '') + dealerNet.toLocaleString() + 'Âè£';
            document.getElementById('dealer-net').style.color = 
                dealerNet >= 0 ? 'var(--accent-red)' : 'var(--accent-green)';
            
            const totalRatio = futuresData.ratio || 1;
            updateBattleGauge('institutional', totalRatio);
            
            const institutionalNet = foreignNet + trustNet + dealerNet;
            document.getElementById('institutional-net').textContent = 
                (institutionalNet >= 0 ? '+' : '') + institutionalNet.toLocaleString() + 'Âè£';
            document.getElementById('institutional-net').style.color = 
                institutionalNet >= 0 ? 'var(--accent-red)' : 'var(--accent-green)';
        }

        function updateBattleGauge(prefix, ratio) {
            const scoreElement = document.getElementById(`${prefix}-ratio-score`);
            const gaugeFill = document.getElementById(`${prefix}-gauge-fill`);
            
            if (!scoreElement || !gaugeFill) return;
            
            let score = 0;
            if (ratio <= 0.5) {
                score = 0;
            } else if (ratio >= 1.5) {
                score = 100;
            } else {
                score = ((ratio - 0.5) / 1.0) * 100;
            }
            
            const color = getRetailColor(ratio);
            
            scoreElement.textContent = ratio.toFixed(2);
            scoreElement.style.color = color;
            
            const circumference = 339.3;
            const offset = circumference - (circumference * score / 100);
            gaugeFill.setAttribute('stroke-dashoffset', offset);
            gaugeFill.setAttribute('stroke', color);
        }

        function interpretRetailSentiment(ratio) {
            if (ratio >= 1.5) {
                return {
                    sentiment: 'Ê•µÂ∫¶Ê®ÇËßÄ',
                    signal: '‚ö†Ô∏è Ë≠¶ÊàíË®äËôü',
                    advice: 'Êï£Êà∂ÈÅéÂ∫¶ÁúãÂ§ö,ÂèØËÉΩÊé•ËøëÈ´òÈªû„ÄÇÂª∫Ë≠∞: ËÄÉÊÖÆÊ∏õÁ¢ºÊàñÁç≤Âà©‰∫ÜÁµê',
                    color: '#ff3366'
                };
            } else if (ratio >= 1.2) {
                return {
                    sentiment: 'ÂÅèÊ®ÇËßÄ',
                    signal: '‚ö†Ô∏è Ê≥®ÊÑè',
                    advice: 'Êï£Êà∂ÂÅèÂ§ö,ÈúÄË¨πÊÖé„ÄÇÂª∫Ë≠∞: ÈÅøÂÖçËøΩÈ´ò',
                    color: '#ff9500'
                };
            } else if (ratio >= 0.8) {
                return {
                    sentiment: '‰∏≠ÊÄß',
                    signal: '‚ûñ ËßÄÊúõ',
                    advice: 'Êï£Êà∂Â§öÁ©∫Âπ≥Ë°°,Â∏ÇÂ†¥ËßÄÊúõ„ÄÇÂª∫Ë≠∞: ÊåÅÁ∫åËßÄÂØü',
                    color: '#ffaa00'
                };
            } else if (ratio >= 0.6) {
                return {
                    sentiment: 'ÂÅèÊÇ≤ËßÄ',
                    signal: '‚úÖ Ê©üÊúÉË®äËôü',
                    advice: 'Êï£Êà∂ÂÅèÁ©∫,ÂèØËÉΩÊòØÊ©üÊúÉ„ÄÇÂª∫Ë≠∞: ÂèØËÄÉÊÖÆÂ∏ÉÂ±Ä',
                    color: '#00ff88'
                };
            } else {
                return {
                    sentiment: 'Ê•µÂ∫¶ÊÇ≤ËßÄ',
                    signal: '‚úÖ‚úÖ ÈªÉÈáëÊ©üÊúÉ',
                    advice: 'Êï£Êà∂ÈÅéÂ∫¶ÁúãÁ©∫,ÂèØËÉΩÊé•Ëøë‰ΩéÈªû„ÄÇÂª∫Ë≠∞: Á©çÊ•µÂ∏ÉÂ±ÄÂ•ΩÊôÇÊ©ü',
                    color: '#00d9ff'
                };
            }
        }

        function getRetailColor(ratio) {
            if (ratio >= 1.5) return '#ff3366';
            if (ratio >= 1.2) return '#ff9500';
            if (ratio >= 0.8) return '#ffaa00';
            if (ratio >= 0.6) return '#00ff88';
            return '#00d9ff';
        }

        // ============================================
        // ÊÉÖÁ∑íÊåáÊ®ô
        // ============================================
        function updateTaiwanGauge(sentimentData, latest) {
            if (!sentimentData) return;
            const score = sentimentData.score || 0;
            const components = sentimentData.components || {};
            
            document.getElementById('tw-gauge-score').textContent = Math.round(score);
            const angle = (score / 100) * 180 - 90;
            const needleEl = document.getElementById('tw-gauge-needle');
            if (needleEl) needleEl.style.transform = `translateX(-50%) rotate(${angle}deg)`;
            
            let rating, ratingClass;
            if (score < 20) { rating = 'Ê•µÂ∫¶ÊÇ≤ËßÄ'; ratingClass = 'tw-rating-extreme-pessimistic'; }
            else if (score < 40) { rating = 'ÊÇ≤ËßÄ'; ratingClass = 'tw-rating-pessimistic'; }
            else if (score < 60) { rating = '‰∏≠ÊÄß'; ratingClass = 'tw-rating-neutral'; }
            else if (score < 80) { rating = 'Ê®ÇËßÄ'; ratingClass = 'tw-rating-optimistic'; }
            else { rating = 'Ê•µÂ∫¶Ê®ÇËßÄ'; ratingClass = 'tw-rating-extreme-optimistic'; }
            const ratingEl = document.getElementById('tw-gauge-rating');
            if (ratingEl) { ratingEl.textContent = rating; ratingEl.className = 'gauge-rating ' + ratingClass; }
            
            const descMap = {
                'momentum': (s) => s >= 60 ? 'Á´ô‰∏äÂùáÁ∑ö' : s >= 40 ? 'ÂùáÁ∑öÈôÑËøë' : 'Ë∑åÁ†¥ÂùáÁ∑ö',
                'breadth': (s) => s >= 60 ? 'Â§öÊï∏‰∏äÊº≤' : s >= 40 ? 'Êº≤Ë∑å‰∫íË¶ã' : 'Â§öÊï∏‰∏ãË∑å',
                'strength': (s) => s >= 60 ? 'Êñ∞È´òÂ±ÖÂ§ö' : s >= 40 ? 'È´ò‰Ωé‰∫íË¶ã' : 'Êñ∞‰ΩéÂ±ÖÂ§ö',
                'margin': (s) => s >= 70 ? 'ÊßìÊ°øÂÅèÈ´ò' : s >= 50 ? 'ÊßìÊ°øÈÅ©‰∏≠' : 'ÊßìÊ°øÂÅè‰Ωé',
                'futures': (s) => s >= 60 ? 'ÂÅèÂ§öÊìç‰Ωú' : s >= 40 ? 'Â§öÁ©∫ÂùáË°°' : 'ÂÅèÁ©∫Êìç‰Ωú',
                'foreign': (s) => s >= 60 ? 'Â§ñË≥áÂÅöÂ§ö' : s >= 40 ? 'Â§ñË≥áËßÄÊúõ' : 'Â§ñË≥áÂÅöÁ©∫',
                'pcr': (s) => s >= 60 ? 'ÁúãÊº≤Ê∞£Ê∞õ' : s >= 40 ? 'Ê∞£Ê∞õ‰∏≠ÊÄß' : 'ÁúãË∑åÈÅøÈö™'
            };
            
            const compMap = {
                'momentum': 'comp-momentum',
                'breadth': 'comp-breadth', 
                'strength': 'comp-strength',
                'margin': 'comp-margin',
                'futures': 'comp-futures',
                'foreign': 'comp-foreign',
                'pcr': 'comp-pcr'
            };
            
            for (const [key, elemId] of Object.entries(compMap)) {
                const row = document.getElementById(elemId);
                if (!row) continue;
                
                const comp = components[key];
                const bar = row.querySelector('.comp-bar');
                const scoreEl = row.querySelector('.comp-score');
                const descEl = row.querySelector('.comp-desc');
                
                if (comp && comp.score != null) {
                    const s = comp.score;
                    bar.style.width = s + '%';
                    scoreEl.textContent = s;
                    
                    if (descEl && descMap[key]) {
                        descEl.textContent = descMap[key](s);
                    }
                    
                    bar.classList.remove('score-low', 'score-mid', 'score-high');
                    if (s < 40) { 
                        bar.classList.add('score-low'); 
                        scoreEl.style.color = '#ea384d';
                        if (descEl) descEl.style.color = '#ea384d';
                    } else if (s < 60) { 
                        bar.classList.add('score-mid'); 
                        scoreEl.style.color = '#ffd700';
                        if (descEl) descEl.style.color = '#ffd700';
                    } else { 
                        bar.classList.add('score-high'); 
                        scoreEl.style.color = '#16c784';
                        if (descEl) descEl.style.color = '#16c784';
                    }
                } else {
                    bar.style.width = '0%';
                    scoreEl.textContent = '--';
                    scoreEl.style.color = 'var(--text-secondary)';
                    if (descEl) { descEl.textContent = '--'; descEl.style.color = 'var(--text-secondary)'; }
                }
            }
        }

        function updateUSGauge(sentimentData) {
            if (!sentimentData) return;
            const score = sentimentData.score || 0;
            const previousScore = sentimentData.previous_close || 0;
            document.getElementById('us-gauge-score').textContent = Math.round(score);
            const angle = (score / 100) * 180 - 90;
            const needleEl = document.getElementById('us-gauge-needle');
            if (needleEl) needleEl.style.transform = `translateX(-50%) rotate(${angle}deg)`;
            let rating, ratingClass;
            if (score < 20) { rating = 'Extreme Fear'; ratingClass = 'us-rating-extreme-fear'; }
            else if (score < 40) { rating = 'Fear'; ratingClass = 'us-rating-fear'; }
            else if (score < 60) { rating = 'Neutral'; ratingClass = 'us-rating-neutral'; }
            else if (score < 75) { rating = 'Greed'; ratingClass = 'us-rating-greed'; }
            else { rating = 'Extreme Greed'; ratingClass = 'us-rating-extreme-greed'; }
            const ratingEl = document.getElementById('us-gauge-rating');
            if (ratingEl) { ratingEl.textContent = rating; ratingEl.className = 'gauge-rating ' + ratingClass; }
            if (previousScore) {
                document.getElementById('us-prev-score').textContent = Math.round(previousScore);
                const prevBadge = document.getElementById('us-prev-badge');
                prevBadge.textContent = getUSRatingText(previousScore);
                prevBadge.className = 'gauge-history-badge ' + getUSBadgeClass(previousScore);
            }
        }

        function getUSRatingText(score) {
            if (score < 20) return 'Extreme Fear';
            if (score < 40) return 'Fear';
            if (score < 60) return 'Neutral';
            if (score < 75) return 'Greed';
            return 'Extreme Greed';
        }

        function getUSBadgeClass(score) {
            if (score < 20) return 'badge-extreme-fear';
            if (score < 40) return 'badge-fear';
            if (score < 60) return 'badge-neutral';
            if (score < 75) return 'badge-greed';
            return 'badge-extreme-greed';
        }

        // ËºâÂÖ•Â§ñË≥áË≤∑Ë≥£Ë∂ÖÊéíË°å
        async function loadForeignTopStocks() {
            try {
                const response = await fetch('./data/foreign_top_stocks.json?t=' + new Date().getTime());
                if (!response.ok) return null;
                return await response.json();
            } catch (error) {
                console.error('ËºâÂÖ•Â§ñË≥áÊéíË°åÂ§±Êïó:', error);
                return null;
            }
        }

        // Êõ¥Êñ∞Â§ñË≥áË≤∑Ë≥£Ë∂ÖÈ°ØÁ§∫
        function updateForeignTopStocks(data) {
            if (!data || !data.top_buy || !data.top_sell) return;

            const buyList = document.getElementById('foreign-buy-list');
            const sellList = document.getElementById('foreign-sell-list');
            
            if (!buyList || !sellList) return;

            buyList.innerHTML = '';
            data.top_buy.forEach((stock, index) => {
                const amount = Math.abs(stock.foreign_net);
                const amountText = amount >= 10000 ? `${(amount / 10000).toFixed(1)}Ëê¨` : `${amount.toLocaleString()}`;
                
                const item = document.createElement('div');
                item.className = 'foreign-item';
                item.innerHTML = `
                    <div class="foreign-rank">${index + 1}</div>
                    <div class="foreign-code">${stock.code}</div>
                    <div class="foreign-name">${stock.name}</div>
                    <div class="foreign-amount">+${amountText}</div>
                `;
                buyList.appendChild(item);
            });

            sellList.innerHTML = '';
            data.top_sell.forEach((stock, index) => {
                const amount = Math.abs(stock.foreign_net);
                const amountText = amount >= 10000 ? `${(amount / 10000).toFixed(1)}Ëê¨` : `${amount.toLocaleString()}`;
                
                const item = document.createElement('div');
                item.className = 'foreign-item';
                item.innerHTML = `
                    <div class="foreign-rank">${index + 1}</div>
                    <div class="foreign-code">${stock.code}</div>
                    <div class="foreign-name">${stock.name}</div>
                    <div class="foreign-amount">-${amountText}</div>
                `;
                sellList.appendChild(item);
            });
        }

        // ËºâÂÖ•‰∏âÂ§ßÊ≥ï‰∫∫Ë≤∑Ë≥£ÈáëÈ°ç
        async function loadInstitutionalMoney() {
            try {
                const response = await fetch('./data/institutional_money.json?t=' + new Date().getTime());
                if (!response.ok) return null;
                return await response.json();
            } catch (error) {
                console.error('ËºâÂÖ•‰∏âÂ§ßÊ≥ï‰∫∫Â§±Êïó:', error);
                return null;
            }
        }

        // ËºâÂÖ•Êº≤ÂÅúË∑åÂÅúËÇ°
        async function loadLimitUpDown() {
            try {
                const response = await fetch('./data/limit_updown.json?t=' + new Date().getTime());
                if (!response.ok) return null;
                return await response.json();
            } catch (error) {
                console.error('ËºâÂÖ•Êº≤ÂÅúË∑åÂÅúÂ§±Êïó:', error);
                return null;
            }
        }

        // Êõ¥Êñ∞Êº≤ÂÅúË∑åÂÅúÈ°ØÁ§∫
        function updateLimitUpDown(data) {
            if (!data || !data.limit_up || !data.limit_down) return;

            const upList = document.getElementById('limit-up-list');
            const upCount = document.getElementById('limit-up-count');
            const downList = document.getElementById('limit-down-list');
            const downCount = document.getElementById('limit-down-count');
            
            if (!upList || !upCount || !downList || !downCount) return;

            // Êõ¥Êñ∞Êº≤ÂÅúËÇ°
            upCount.textContent = data.limit_up.length;
            upList.innerHTML = '';
            
            data.limit_up.forEach(stock => {
                const item = document.createElement('div');
                item.className = 'limit-item';
                
                item.innerHTML = `
                    <div class="limit-code">${stock.code}</div>
                    <div class="limit-name">${stock.name}</div>
                    <div class="limit-price">${stock.price}</div>
                    <div class="limit-change">+${stock.change_pct.toFixed(2)}%</div>
                `;
                
                upList.appendChild(item);
            });

            // Êõ¥Êñ∞Ë∑åÂÅúËÇ°
            downCount.textContent = data.limit_down.length;
            downList.innerHTML = '';
            
            data.limit_down.forEach(stock => {
                const item = document.createElement('div');
                item.className = 'limit-item';
                
                item.innerHTML = `
                    <div class="limit-code">${stock.code}</div>
                    <div class="limit-name">${stock.name}</div>
                    <div class="limit-price">${stock.price}</div>
                    <div class="limit-change">${stock.change_pct.toFixed(2)}%</div>
                `;
                
                downList.appendChild(item);
            });
        }



        // Êõ¥Êñ∞‰∏âÂ§ßÊ≥ï‰∫∫È°ØÁ§∫
        function updateInstitutionalMoney(data) {
            if (!data || !data.data) return;

            const tbody = document.getElementById('institutional-tbody');
            const ratioDiv = document.getElementById('institutional-ratio');
            
            if (!tbody || !ratioDiv) return;

            tbody.innerHTML = '';
            
            data.data.forEach(item => {
                const tr = document.createElement('tr');
                const diffClass = item.diff >= 0 ? 'inst-diff-positive' : 'inst-diff-negative';
                const diffSign = item.diff >= 0 ? '+' : '';
                
                tr.innerHTML = `
                    <td class="inst-name">${item.name}</td>
                    <td class="inst-buy">${item.buy.toFixed(2)}</td>
                    <td class="inst-sell">${item.sell.toFixed(2)}</td>
                    <td class="${diffClass}">${diffSign}${item.diff.toFixed(2)}</td>
                `;
                tbody.appendChild(tr);
            });
            
            const totalTr = document.createElement('tr');
            totalTr.className = 'inst-total-row';
            const totalDiffClass = data.total.diff >= 0 ? 'inst-diff-positive' : 'inst-diff-negative';
            const totalDiffSign = data.total.diff >= 0 ? '+' : '';
            
            totalTr.innerHTML = `
                <td class="inst-name">ÂêàË®à</td>
                <td class="inst-buy">${data.total.buy.toFixed(2)}</td>
                <td class="inst-sell">${data.total.sell.toFixed(2)}</td>
                <td class="${totalDiffClass}">${totalDiffSign}${data.total.diff.toFixed(2)}</td>
            `;
            tbody.appendChild(totalTr);
            
            ratioDiv.innerHTML = `üìä Ê≥ï‰∫∫Êàê‰∫§ÊØîÈáç: <strong style="color: #48dbfb">${data.institutional_ratio.toFixed(2)}%</strong> | Â∏ÇÂ†¥Á∏ΩÊàê‰∫§: ${(data.market_total / 100).toFixed(2)}ÂÑÑÂÖÉ`;
        }




        

        // ============================================
        // ÂàùÂßãÂåñ
        // ============================================
        window.addEventListener('load', async () => {
            setTimeout(async () => {
                const data = await loadData();
                const turnoverData = await loadTurnoverData();
                
                updateUI(data);
                updateTurnoverMonitor(turnoverData);
                loadAllCommodities();
                
                // ËºâÂÖ•‰∏âÂ§ßÊ≥ï‰∫∫
                const institutionalData = await loadInstitutionalMoney();
                if (institutionalData) updateInstitutionalMoney(institutionalData);
                
                // ËºâÂÖ•Êº≤ÂÅúË∑åÂÅú
                const limitData = await loadLimitUpDown();
                if (limitData) updateLimitUpDown(limitData);
                
                // ËºâÂÖ•Â§ñË≥áÊéíË°å
                const foreignData = await loadForeignTopStocks();
                if (foreignData) updateForeignTopStocks(foreignData);
                if (data.sentiment) {
                    if (data.sentiment.taiwan) updateTaiwanGauge(data.sentiment.taiwan, data.latest);
                    if (data.sentiment.us) updateUSGauge(data.sentiment.us);
                }
                if (data.futures) updateRetailBattle(data.futures);
                if (data.history) initCharts(data.history);
                
                document.getElementById('loadingScreen').style.display = 'none';
                document.getElementById('mainContent').style.display = 'block';
                
                const mockWarningClose = document.getElementById('mockWarningClose');
                if (mockWarningClose) {
                    mockWarningClose.addEventListener('click', () => {
                        document.getElementById('mockDataWarning').style.display = 'none';
                    });
                }
                
                const guideBtn = document.getElementById('guideBtn');
                const guidePanel = document.getElementById('guidePanel');
                const guidePanelClose = document.getElementById('guidePanelClose');
                const guidePanelOverlay = document.getElementById('guidePanelOverlay');
                
                guideBtn.addEventListener('click', () => {
                    guidePanel.classList.add('active');
                });
                
                guidePanelClose.addEventListener('click', () => {
                    guidePanel.classList.remove('active');
                });
                
                guidePanelOverlay.addEventListener('click', () => {
                    guidePanel.classList.remove('active');
                });
                
                document.addEventListener('keydown', (e) => {
                    if (e.key === 'Escape' && guidePanel.classList.contains('active')) {
                        guidePanel.classList.remove('active');
                    }
                });
                
                // ÊÉÖÁ∑íÊåáÊ®ôË™™Êòé Popup
                const sentimentInfoBtn = document.getElementById('sentimentInfoBtn');
                const sentimentPopupOverlay = document.getElementById('sentimentPopupOverlay');
                const sentimentPopup = document.getElementById('sentimentPopup');
                const sentimentPopupClose = document.getElementById('sentimentPopupClose');
                
                if (sentimentInfoBtn) {
                    sentimentInfoBtn.addEventListener('click', function() {
                        sentimentPopupOverlay.style.display = 'block';
                        sentimentPopup.style.display = 'block';
                    });
                }
                
                function closeSentimentPopup() {
                    sentimentPopupOverlay.style.display = 'none';
                    sentimentPopup.style.display = 'none';
                }
                
                if (sentimentPopupClose) sentimentPopupClose.addEventListener('click', closeSentimentPopup);
                if (sentimentPopupOverlay) sentimentPopupOverlay.addEventListener('click', closeSentimentPopup);

                setInterval(async () => {
                    const newData = await loadData();
                    updateUI(newData);
                }, 5 * 60 * 1000);
            }, 1500);
        });
    </script>

    <!-- Âë®ËΩâÁéáÈÅéÁÜ±Áõ£Êéß -->
    <div class="turnover-section">
        <div class="turnover-header">
            <div class="turnover-title">
                üî• Âë®ËΩâÁéáÈÅéÁÜ±Áõ£Êéß
                <span style="font-size: 14px; color: rgba(255,255,255,0.5);">Êàê‰∫§Èáè TOP 50 ÁÜ±ÈñÄËÇ°ËøΩËπ§</span>
            </div>
            <div class="turnover-stats">
                <div class="turnover-stat-item">
                    <div class="turnover-stat-label">Ê•µÂ∫¶Âç±Èö™</div>
                    <div class="turnover-stat-value stat-danger" id="stat-extreme">0</div>

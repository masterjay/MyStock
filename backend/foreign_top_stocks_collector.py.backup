def save_to_database(stocks):
    """å„²å­˜åˆ°è³‡æ–™åº«"""
    conn = sqlite3.connect('market_data.db')
    cursor = conn.cursor()
    
    # å»ºç«‹è¡¨æ ¼
    cursor.execute('''
        CREATE TABLE IF NOT EXISTS foreign_top_stocks (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            date TEXT NOT NULL,
            code TEXT NOT NULL,
            name TEXT,
            foreign_buy INTEGER,
            foreign_sell INTEGER,
            foreign_net INTEGER,
            trust_buy INTEGER,
            trust_sell INTEGER,
            trust_net INTEGER,
            dealer_buy INTEGER,
            dealer_sell INTEGER,
            dealer_net INTEGER,
            total_net INTEGER,
            created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
            UNIQUE(date, code)
        )
    ''')
    
    today = datetime.now().strftime('%Y%m%d')
    saved = 0
    
    for stock in stocks:
        try:
            cursor.execute('''
                INSERT OR REPLACE INTO foreign_top_stocks 
                (date, code, name, foreign_buy, foreign_sell, foreign_net,
                 trust_buy, trust_sell, trust_net, dealer_buy, dealer_sell, dealer_net, total_net)
                VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)
            ''', (today, stock['code'], stock['name'], 
                  stock['foreign_buy'], stock['foreign_sell'], stock['foreign_net'],
                  stock['trust_buy'], stock['trust_sell'], stock['trust_net'],
                  stock['dealer_buy'], stock['dealer_sell'], stock['dealer_net'],
                  stock['total_net']))
            saved += 1
        except Exception as e:
            print(f"âœ— å„²å­˜ {stock['code']} å¤±æ•—: {e}")
    
    conn.commit()
    conn.close()
    
    return saved

def export_to_json(stocks):
    """è¼¸å‡º JSON - åªè¼¸å‡ºå‰30åè²·è¶…å’Œè³£è¶…"""
    # æŒ‰å¤–è³‡æ·¨è²·è³£è¶…æ’åº
    sorted_stocks = sorted(stocks, key=lambda x: x['foreign_net'], reverse=True)
    
    # å‰30è²·è¶…
    top_buy = sorted_stocks[:30]
    
    # å‰30è³£è¶…
    top_sell = sorted(stocks, key=lambda x: x['foreign_net'])[:30]
    
    output = {
        'updated_at': datetime.now().isoformat(),
        'date': datetime.now().strftime('%Y%m%d'),
        'top_buy': top_buy,
        'top_sell': top_sell
    }
    
    with open('data/foreign_top_stocks.json', 'w', encoding='utf-8') as f:
        json.dump(output, f, ensure_ascii=False, indent=2)


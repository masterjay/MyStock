                # å¤–é™¸è³‡è²·è³£è¶… (ä¸å«è‡ªç‡Ÿ)
                foreign_net = int(row[4].replace(',', '')) if row[4] else 0
                
                # éæ¿¾æ¢ä»¶: æ’é™¤ ETF ä¸”æœ‰å¤–è³‡äº¤æ˜“
                is_etf = (code.startswith('00') or 
                         'ETF' in name.upper() or 

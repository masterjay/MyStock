def get_market_momentum():
    """å–å¾—åŠ æ¬ŠæŒ‡æ•¸å‹•èƒ½æ•¸æ“š"""
    try:
        # æŠ“å–åŠ æ¬ŠæŒ‡æ•¸æ—¥ç·šè³‡æ–™
        url = "https://www.twse.com.tw/exchangeReport/STOCK_DAY?response=json&date=" + datetime.now().strftime('%Y%m%d') + "&stockNo=0000"
        headers = {'User-Agent': 'Mozilla/5.0'}
